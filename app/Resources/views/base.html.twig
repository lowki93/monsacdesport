<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge; chrome=1" />
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            {% stylesheets
                '@MonSacDeSportBundle/Resources/public/css/style.sass'
                filter="cssrewrite,sass" output='css/style.css' %}
                   <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="large-12 columns">
            {% if is_granted("ROLE_ADMIN") %}
                <a href="{{path('admin_products')}}">Go to admin</a><br />
                <a href="{{ path('fos_user_security_logout')}}">DÃ©connexion</a>
            {% else %}
                <a href="{{path('fos_user_security_login')}}">Connexion</a><br />
                <a href="{{path('fos_user_registration_register')}}">Inscription</a>
            {% endif %}
            {% block body %}{% endblock %}
        </div>
        {% javascripts
            'bundles/monsacdesport/jquery/jquery.js'
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% block javascripts %}{% endblock %}
    </body>
